<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_screen"
    android:layout_height="match_parent"
    tools:ignore="ExtraText,HardcodedText,SpeakableTextPresentCheck,TouchTargetSizeCheck"
    tools:context=".DetailRestroActivity">

    // button back
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintVertical_bias="0.2">

        <ImageButton
            android:layout_margin="2dp"
            android:id="@+id/backButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/white"
            android:contentDescription="123"
            app:srcCompat="@mipmap/back_back_foreground"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>

    // button favorite
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.2">

        <ImageButton
            android:layout_margin="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/white"
            android:contentDescription="btnBack"
            app:srcCompat="@drawable/favorite"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>

    // background
    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_restro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    // content

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Delics Fruit Salad"
                android:textColor="#3E4462"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="174 NTMK , district 5, HCM city"
                android:textColor="#7E7E7E"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:text="Open"
                    android:textColor="#3E4462"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:text="8 am - 8 pm"
                    android:textColor="#7E7E7E"
                    android:textSize="14sp"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="55sp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/location_promo"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:text="1 km"
                    android:textColor="#3E4462"
                    android:textSize="14sp"
                    tools:ignore="TextContrastCheck,UseCompatTextViewDrawableXml" />

                <TextView
                    android:layout_width="55sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:drawableStart="@drawable/star_16px_promo"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:text="5.0"
                    android:textColor="#3E4462"
                    android:textSize="14sp"
                    tools:ignore="TextContrastCheck,UseCompatTextViewDrawableXml" />

                <TextView
                    android:layout_width="72sp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/check"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:text="Verified"
                    android:textColor="#3E4462"
                    android:textSize="14sp"
                    tools:ignore="TextContrastCheck,UseCompatTextViewDrawableXml,TextSizeCheck" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    // session
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            tools:ignore="UselessParent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                // menu bar
                <LinearLayout
                    android:id="@+id/lnLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableBottom="@drawable/line_2"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingVertical="10dp"
                        android:text="Menu items"
                        android:textColor="#3E4462"
                        android:textSize="18sp"
                        tools:ignore="UseCompatTextViewDrawableXml" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Reviews"
                        android:textColor="#7E7E7E"
                        android:textSize="18sp"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Info"
                        android:textColor="#7E7E7E"
                        android:textSize="18sp"
                        tools:ignore="TextContrastCheck" />

                </LinearLayout>

                // food list
                <androidx.recyclerview.widget.RecyclerView
                    app:layout_constraintTop_toBottomOf="@+id/lnLayout1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/foodColumn"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    tools:itemCount="5"
                    tools:listitem="@layout/food_column_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        // button
        <LinearLayout
            android:id="@+id/lnCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/custom_buttom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewCheckout_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="item"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="checkout"/>

                <TextView
                    android:id="@+id/textViewCheckout_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="vnd"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Toolbar content -->
        <RelativeLayout
            android:id="@+id/showHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/home_icon"
                android:layout_alignEnd="@id/home_icon"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-3dp"
                android:src="@drawable/rectangle_27"
                android:visibility="invisible" />
        </RelativeLayout>


        <RelativeLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/shopping_bag_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/shopping_bag" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/shopping_bag_icon"
                android:layout_alignEnd="@id/shopping_bag_icon"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-3dp"
                android:src="@drawable/rectangle_27"
                android:visibility="visible" />

        </RelativeLayout>


        <RelativeLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/search_24px" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/search_icon"
                android:layout_alignEnd="@id/search_icon"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-3dp"
                android:src="@drawable/rectangle_27"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/showUserSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/user_16px" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/user_icon"
                android:layout_alignEnd="@id/user_icon"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-3dp"
                android:src="@drawable/rectangle_27"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
